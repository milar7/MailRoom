<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mailsFragment">

    <fragment
        android:id="@+id/mailsFragment"
        android:name="com.example.mailroom.ui.mails.MailsFragment"
        tools:layout="@layout/mails_fragment"
        android:label="MailsFragment" >
        <action
            android:id="@+id/action_mailsFragment_to_newMailFragment"
            app:destination="@id/newMailFragment"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_out_buttom"
            app:popEnterAnim="@anim/slide_in_up"
            app:popExitAnim="@anim/slide_out_buttom"
            />
        <action
            android:id="@+id/action_mailsFragment_to_detailMailFragment"
            app:destination="@id/detailMailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
        <action
            android:id="@+id/action_mailsFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/newMailFragment"
        android:name="com.example.mailroom.ui.mails.NewMailFragment"
        android:label="NewMailFragment"
        tools:layout="@layout/fragment_new_mail"/>
    <fragment
        android:id="@+id/userFragment"
        android:name="com.example.mailroom.ui.users.UserFragment"
        android:label="user_fragment"
        tools:layout="@layout/user_fragment" >
        <action
            android:id="@+id/action_userFragment_to_newUserFragment"
            app:destination="@id/newUserFragment"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_out_buttom"
            app:popEnterAnim="@anim/slide_in_up"
            app:popExitAnim="@anim/slide_out_buttom"
            />
        <action
            android:id="@+id/action_userFragment_to_userMailsFragment"
            app:destination="@id/userMailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/newUserFragment"
        android:name="com.example.mailroom.ui.users.NewUserFragment"
        android:label="NewUserFragment"
        tools:layout="@layout/fragment_new_user"/>
    <fragment
        android:id="@+id/detailMailFragment"
        android:name="com.example.mailroom.ui.mails.DetailMailFragment"
        android:label="DetailMailFragment"
        tools:layout="@layout/fragment_detail_mail">
        <argument
            android:name="mail"
            app:argType="com.example.mailroom.data.entity.Mail" />
    </fragment>
    <fragment
        android:id="@+id/userMailsFragment"
        android:name="com.example.mailroom.ui.users.UserMailsFragment"
        android:label="UserMailsFragment"
        tools:layout="@layout/fragment_user_mails">
        <argument
            android:name="item"
            app:argType="com.example.mailroom.data.entity.User" />
        <action
            android:id="@+id/action_userMailsFragment_to_detailMailFragment"
            app:destination="@id/detailMailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.mailroom.ui.mails.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search"
        >
        <action
            android:id="@+id/action_searchFragment_to_detailMailFragment"
            app:destination="@id/detailMailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>
</navigation>